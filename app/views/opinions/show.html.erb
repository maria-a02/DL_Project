<h1>Opiniones</h1>

<table>
    <thead>
        <tr>
        <th>Título</th>
        <th>Comentario</th>
        <th>Rating</th>
        <th>Editar comentario</th>
        <th>Borrar comentario</th>
        <th colspan="3"></th>
    </tr>
    </thead>
<tbody>
    <% @opinions.each do |opinion| %>
        <tr>
            <td><%= opinion.title%></td>
            <td><%= opinion.comment %></td>
            <td id="opinion-rating" data-score="<%= opinion.rating %>"></td>
            <td><%= link_to 'Editar', edit_opinion_path(opinion) %></td>
            <td><%= link_to 'Borrar', opinion, method: :delete, data: {confirm: '¿Quieres eliminar tu comentario?'} %></td>
        </tr>
    <% end %>
</tbody>
</table>
<%= link_to 'Agregar comentario', new_opinion_path, class: 'btn btn-info' %>
<%= link_to 'Volver al inicio', root_path, class: 'btn btn-warning' %>

<script>
$('#opinion-rating').raty({
    readOnly: true,
    score: function() {
    return $(this).attr('data-score');
    },
    path: '/assets/'
});
</script>