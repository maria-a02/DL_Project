<h1>Opiniones</h1>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Título</th>
            <th>Comentario</th>
            <th>Calificación</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        <div id='opinion'>
            <td><%= current_user.name %></td>
            <% @opinions.each do |opinion| %>
            <tr>
            <td><%= opinion.title %></td>
            <td><%= opinion.comment %></td>
            <td><%= opinion.rating %></td>
            <td><%= link_to 'Show', opinion %></td>
            <td><%= link_to 'Edit', edit_opinion_path(opinion) %></td>
            <td><%= link_to 'Destroy', opinion, method: :delete, data: { confirm: '¿Estás seguro/a' } %></td>
        <% end %>
        </div>
        </tr>
    </tbody>
</table>

<div class="p-3">
    <%= link_to 'Volver', root_path, class: 'btn btn-info', remote: true%>
</div>
